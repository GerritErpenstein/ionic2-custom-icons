{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "declaration": true ,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "lib": [
      "dom",
      "es2015"
    ],
    "module": "es2015",
    "moduleResolution": "node",
    "sourceMap": true,
    "target": "es5",
    "outDir": "dist",
    "types": [
      "node"
    ]
  },
  "include": [
    "src/index.ts",
    "src/custom-icons.module.ts"
  ],
  "exclude": [
    "./../node_modules"
  ],
  "compileOnSave": false,
  "atom": {
    "rewriteTsconfig": false
  }
}
